<![CDATA[<UserControl x:Class="XDM.Wpf.UI.Controls.ProgressVisualization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Progress Bar with Animation -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ProgressBar x:Name="MainProgressBar" 
                        Height="4" 
                        Value="{Binding Progress}"
                        Maximum="100"
                        Background="{DynamicResource ProgressBarBackgroundBrush}"
                        Foreground="{DynamicResource ProgressBarForegroundBrush}">
                <ProgressBar.Triggers>
                    <EventTrigger RoutedEvent="ProgressBar.ValueChanged">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="MainProgressBar"
                                    Storyboard.TargetProperty="Value"
                                    Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ProgressBar.Triggers>
            </ProgressBar>

            <TextBlock Grid.Row="1" 
                       Margin="0,5,0,0"
                       HorizontalAlignment="Center">
                <Run Text="{Binding Progress, StringFormat='{}{0:F1}'}"/>
                <Run Text="%"/>
                <Run Text=" - "/>
                <Run Text="{Binding Speed}"/>
                <Run Text=" - "/>
                <Run Text="{Binding TimeRemaining}"/>
            </TextBlock>
        </Grid>

        <!-- Speed Graph -->
        <lvc:CartesianChart Grid.Row="1" 
                           Height="150"
                           Margin="0,10">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Title="Download Speed" 
                               Values="{Binding SpeedHistory}"
                               PointGeometry="{x:Null}"
                               LineSmoothness="0.5"
                               StrokeThickness="2"
                               Stroke="{DynamicResource GraphLineBrush}"
                               Fill="{DynamicResource GraphAreaBrush}"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time" 
                         Labels="{Binding TimeLabels}"
                         Foreground="{DynamicResource AxisTextBrush}"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Speed (MB/s)"
                         LabelFormatter="{Binding SpeedFormatter}"
                         Foreground="{DynamicResource AxisTextBrush}"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</UserControl>]]>
